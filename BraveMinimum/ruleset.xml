<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="BraveMinimum" namespace="BraveCS\BraveMinimum" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/squizlabs/PHP_CodeSniffer/master/phpcs.xsd">

	<description>Minimum coding standard for Brave.com plugins</description>

	<rule ref="WordPressVIPMinimum">
